import java.util.Scanner;


public class Main {
   public static void main(String args[]) {
       int r;
       Scanner sc = new Scanner(System.in);
       do {
           System.out.println("Caso escolha 1 : Compra blusa, Caso 2: Solicitar valor do produto ou serviço");
           int x = sc.nextInt();
           switch (x) {
               case 1:
                   System.out.println("Otimo escolha!");
                   break;
               case 2:
                   System.out.println("O valor da blusa é r$ 200");
                   break;
               default:
                   System.out.println("Opção inválida");
           }
           System.out.println("Para ver novamente, digite 0");
           r = sc.nextInt();
       } while (r == 0);
   }
}
